<% Photos.forEach(photo => { %>
    <div class="portfolio-modal modal fade" id="photo_<%- photo.id%>" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-bs-dismiss="modal"><img src="assets/img/close-icon.svg" alt="Close modal" /></div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="modal-body">
                                <!-- Project details-->
                                <h2 class="text-uppercase"><%- photo.photoName %></h2>
                                <p class="item-intro text-muted"><%- photo.shortDetail %></p>
                                <img class="img-fluid d-block mx-auto" src="<%- photo.photoURL %> " alt="..." />
                                <p><%- photo.details %> </p>
                                <ul class="list-inline">
                                    <li>
                                        <strong>constituent:</strong>
                                        <%- photo.constituent %>
                                    </li>
                                    <li>
                                        <strong>Category:</strong>
                                        <%- photo.photoCategory %> 
                                    </li>
                                </ul>
                        <div class="container" style="display:flex ; padding-left: 200px; ">
                                <form method="post" action="/delete/<%- photo.id %>">
                                <button class="btn btn-primary btn-danger btn-xl text-uppercase" onclick="return confirm('Silmek isteiÄŸine emin misisniz ?')"  type="submit"  >
                                    <i class="fas fa-xmark me-1"></i>Delete Project
                                </button>
                            </form>
                            <form method="get" action="/update/<%- photo.id %>">
                                <button class="btn btn-primary  btn-xl text-uppercase"  type="submit"  >
                                    <i class="fas fa-edit me-1"></i>Update Project
                                </button>
                            </form>
                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% }) %>